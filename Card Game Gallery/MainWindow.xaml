<Window x:Class="Card_Game_Gallery.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Card_Game_Gallery"
        mc:Ignorable="d"
        Title="Card Game Gallery" Height="550" Width="350">
    <Grid ShowGridLines="false">

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button x:Name="btnGoFish" Grid.Row="0" Content="Go Fish" Margin="10" FontSize="40" FontWeight="Bold" Click="btnGoFish_Click"/>
        <Button x:Name="btnWar" Grid.Row="1" Content="War" Margin="10" FontSize="40" FontWeight="Bold" Click="btnWar_Click"/>
        <Button x:Name="btnBlackjack" Grid.Row="2" Content="Blackjack" Margin="10" FontSize="40" FontWeight="Bold" Click="btnBlackjack_Click"/>
        <Button x:Name="btnPoker" Grid.Row="3" Content="Poker" Margin="10" FontSize="40" FontWeight="Bold" Click="btnPoker_Click"/>
        <Button x:Name="btnQuit" Grid.Row="4" Content="Quit" Margin="20" FontSize="40" FontWeight="Bold" Click="btnQuit_Click"/>

        

    </Grid>
</Window>
